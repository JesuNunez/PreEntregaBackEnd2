<h1>Mi Carrito</h1>

{{#if cart.products.length}}
    <ul>
        {{#each cart.products}}
            <li>
                Producto: {{this.product.name}} - Precio: {{this.product.price}} USD - Cantidad: {{this.quantity}}
            </li>
        {{/each}}
    </ul>
    <form action="/api/carts/{{cart._id}}" method="DELETE">
        <button type="submit">Vaciar carrito</button>
    </form>
{{else}}
    <p>Tu carrito está vacío.</p>
{{/if}}
